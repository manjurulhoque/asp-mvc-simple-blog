@model simple_blog.ViewModels.PostViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Post</h2>

@using (Html.BeginForm("Save", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(c => c.title)
        @Html.TextBoxFor(m => m.title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.description)
        @Html.TextAreaFor(m => m.description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.image)
        @Html.TextBoxFor(m => m.image, new { @class = "form-control", type = "file" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.CategoryId)
        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select Category", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-success">Create New</button>
}