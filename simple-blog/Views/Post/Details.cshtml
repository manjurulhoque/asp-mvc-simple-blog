@model simple_blog.Models.Post
@using simple_blog.CustomHelpers

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Details</h2>

<h1>Title: @Model.title</h1>
<p>Description: @Model.description</p>
@if (Model.created_at != null)
{
    <h3>Created at: @Html.Timeago(Model.created_at)</h3>
}

@Html.ActionLink("Edit", "Edit", "Post", new { id = Model.id }, new { @class = "btn btn-success" })
@using (Html.BeginForm("Delete", "Post"))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", new { id = Model.id })
    <button type="submit" class="btn btn-danger">Delete</button>
}